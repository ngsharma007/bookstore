<header>
	<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
		<a class="navbar-brand" href="<%= path == 'admin' ? '/admin/listbooks': '/'%>">Book Store</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse"
		 aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<% if(path == 'admin') {%>
			
			<style>
				.navbar {
					background: #014f78 !important;
				}
			</style>
			<%}%>
				<div class="collapse navbar-collapse" id="navbarCollapse">
					<ul class="navbar-nav mr-auto">
						<%if(path == 'admin'){%>
							<li class="nav-item">
								<a class="nav-link text-white" href="/admin/listbooks">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" href="/login">Users</a>
							</li>
						<%}%>
						<%if(!user && path != 'admin' && path != 'intermediate' && path != 'guest'){%>
							<li class="nav-item <%= path == 'login' ? 'active': '' %>">
								<a class="nav-link" href="/login">Sign in</a>
							</li>
							<li class="nav-item <%= path == 'signup' ? 'active': '' %>">
								<a class="nav-link" href="/signup">Sign up</a>
							</li>
							<li class="nav-item <%= path == 'admin' ? 'active': '' %>">
								<a class="nav-link" href="/admin">Admin</a>
							</li>
							<li class="nav-item <%= path == 'guest' ? 'active': '' %>">
								<a class="nav-link" href="/guest">Guest</a>
							</li>
							<%}else if(path != 'admin' && path != 'intermediate' && path != 'guest'){%>
								<li class="nav-item <%= path == 'home' ? 'active': '' %>">
									<a class="nav-link" href="/">Books</a>
								</li>
								<li class="nav-item <%= path == 'cart' ? 'active': '' %>">
									<a class="text-white nav-link" href="/cart">
										<span class="fa fa-shopping-cart"></span>
										<span id="cart-total" class="badge bg-light text-dark mx-2">
											<%=cart_total%>
										</span>
									</a>
								</li>
								<%}%>
					</ul>
					<%if(user && path != 'admin' && path != 'guest'){%>
						<form class="form-inline mt-2 mt-md-0 mr-2" method="POST" action="/user/search">
							<input class="searchform form-control mr-sm-2" type="text" placeholder="Search" name="searchdata" aria-label="Search">
							<button class="searchform btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
						</form>
						<ul class="navbar-nav navbar-right">
							<li class="nav-item text-white">
								<span>Hey! <%=user.username%>.</span>
							</li>
						</ul>
						<ul class="navbar-nav navbar-right">
							<li class="nav-item">
								<a class="nav-link" href="/logout">Sign out</a>
							</li>
						</ul>
					<%}%>
					<%if(path == 'guest'){%>
						<form class="form-inline mt-2 mt-md-0 mr-2" method="POST" action="/guest/search">
							<input class="searchform form-control mr-sm-2" type="text" placeholder="Search" name="searchdata" aria-label="Search">
							<button class="searchform btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
						</form>
					<%}%>
					<%if(path == 'admin' && locals.isAdmin){%>
						<ul class="navbar-nav navbar-right pr-2">
							<li class="nav-item">
								<a class="btn btn-light text-dark" href="/admin/add" style="border-radius: 0px;">Add New Book</a>
							</li>
						</ul>
						<form class="form-inline mt-2 mt-md-0 mr-2" method="POST" action="/admin/search">
							<input class="searchform form-control mr-sm-2" type="text" placeholder="Search" name="searchdata" aria-label="Search">
							<button class="searchform btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
						</form>
						<ul class="navbar-nav navbar-right">
							<li class="nav-item">
								<a class="nav-link text-white" href="/admin/logout">Logout</a>
							</li>
						</ul>
					<%}%>				
				</div>
	</nav>
</header>