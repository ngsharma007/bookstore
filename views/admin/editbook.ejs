<!DOCTYPE html>
<html>
<% include ../partials/head %>

    <body>
        <% include ../navigation %>
            <div class="album py-5">
                <div class="container">
                    <div class="row px-0">
                        <!-- <div class="col-md-12"> -->
                        <div class="col-md-3 form-group">
                            <form method="POST" action="/admin/edit/" enctype="multipart/form-data">
                                <img class="card-img-top" style="height: 350px;" src="<%=book.image_path%>" alt="">
                                <label for="book_image">Book Cover</label>
                                <input type="file" class="form-control" name="book_edit_image" id="book_image">
                        </div>
                        <div class="col-md-9 form-group">
                            <div class="pl-4 pt-2" style="width: 100%; background: #fff; border-radius: 5px;">
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label for="titlebook">Title:</label>
                                        <input id="titlebook" type="text" class="form-control" name="title" id="titleBook" value="<%=book.title%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label for="pricebook">Description:</label>
                                        <textarea class="form-control" name="descBook" value="sads" id="" cols="80" rows="2"><%=book.desc%></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label for="pricebook">Price:</label>
                                        <input id="pricebook" class="form-control" type="number" name="price" value="<%=book.price%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label for="authorbook">Author:</label>
                                        <input id="authorbook" class="form-control" type="text" name="author" value="<%=book.author%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label for="edition">Edition:</label>
                                        <input id="edition" class="form-control" type="text" name="edition" value="<%=book.edition%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label for="publisher">Publisher:</label>
                                        <input id="publisher" class="form-control" type="text" name="publisher" value="<%=book.publisher%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label for="isbn">ISBN:</label>
                                        <input id="isbn" class="form-control" type="text" name="isbn" value="<%=book.isbn%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label for="noofbooks">No of Books:</label>
                                        <input id="noofbooks" class="form-control" type="number" name="noofbooks" value="<%=book.total_number_of_books%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-group col-md-12 row">
                                        <div class="col-md-9">
                                            <label for="categorybook">Category:</label>
                                            <select class="form-control" name="category" id="categorybook">
                                                <% for(j = 0; j < categories.length; j++) { %>
                                                    <option value="<%=categories[j].category%>">
                                                        <%=categories[j].category%>
                                                    </option>
                                                    <%}%>
                                            </select>
                                        </div>
                                        <div class="col-md-1">
                                            <label for="">&nbsp;</label>
                                            <input type="button" onclick="addnewCat()" class="btn btn-primary" value="+"></input>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-12 row" id="newcategorydiv" style="display:none;">
                                        <div class="col-md-9">
                                            <label for="newcategorybook">New Category:</label>
                                            <input id="newcategorybook" class="form-control" type="text" name="newcategorybook" value="">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="py-2 col-md-10 pb-2">
                                        <input type="submit" class="btn btn-success" value="Submit">
                                        <input type="hidden" name="bookid" value="<%=book.id%>">
                                        </form>
                                        <a href="/admin/listbooks" class="text-white">
                                            <button class="btn btn-danger">Cancel</button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% include ../partials/script_includes %>
    </body>

</html>